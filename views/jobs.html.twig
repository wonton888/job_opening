<html>
    <head>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <title>Job Posting</title>
    </head>
    <body>
        <h1>Jobs where you worked!</h1>
        <ul>
            {% for job in jobs %}
                <li>Job's name: {{ job.getName }}</li>
                <li>Job title: {{ job.getTitle }}</li>
                <li>Job's description: {{ job.getJobDescription }}</li>
                <li>Job's contact email: {{ job.getContactEmail }}</li>
                <li>Job's contact phone: {{ job.getContactPhone }}</li>
            {% endfor %}
        </ul>

        <form action="/jobs" method="post">
            <div class="form-group">
                <label for="name">Enter the job's name:</label>
                <input id="name" name="name" type="text">
            </div>
            <div class="form-group">
                <label for="title">Enter the job's title</label>
                <input id="title" name="title" type="text">
            </div>
            <div class="form-group">
                <label for="job_description">Enter the job's description:</label>
                <input id="job_description" name="job_description" type="text">
            </div>
            <div class="form-group">
                <label for="contact_email">Enter the job's contact email:</label>
                <input id="contact_email" name="contact_email" type="text">
            </div>
            <div class="form-group">
                <label for="contact_phone">Enter the job's contact phone number:</label>
                <input id="contact_phone" name="contact_phone" type="number">
            </div>
            <button type="submit" class="btn btn-success">Add your job!</button>
        </form>

            <form action="/jobs_deleted" method="post">
                <button type="submit" class="btn btn-danger">Delete your job enteries!</button>
            </form>
    </body>
</html>
